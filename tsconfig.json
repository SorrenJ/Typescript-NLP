{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",                 // Output compiled files to 'dist'
    "rootDir": "./src",                 // Source files are in 'src'
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],              // Include all TypeScript files in 'src'
  "exclude": ["node_modules"]           // Exclude 'node_modules' to avoid compilation there
}
